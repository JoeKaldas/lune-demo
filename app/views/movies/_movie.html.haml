= turbo_frame_tag dom_id(movie) do
  .card.card-colored
    .card-body
      .form-row.align-items-center
        .col-3.col-md-4
          = movie.name
        .col-3.col-md-5
          = movie.description.truncate(60)
        .col-3.col-md-2
          = movie.year
        .col-3.col-md-1
          = movie.rating